<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdatePasswordSuccess">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/check">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#A61128"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="@string/reset_password">
    </TextView>

    <Button
        android:id="@+id/btn_compeleted_reset_password"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:elevation="5dp"
        android:text="@string/reset_password_completed"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@drawable/custom_btn_login"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_forgot"
        app:layout_constraintEnd_toEndOf="@+id/edt_email_forgot"
        app:layout_constraintStart_toStartOf="@+id/edt_email_forgot">
    </Button>

</LinearLayout>