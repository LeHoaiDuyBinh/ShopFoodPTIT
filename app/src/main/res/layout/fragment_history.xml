<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HistoryFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/history_order"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/history_order"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/name_history_item"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="123456"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/history_order"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name_food_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hambuger"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/history_order">
            </TextView>

            <TextView
                android:id="@+id/history_topping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/history_topping"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_food_history"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/history_topping_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Thịt bò"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_food_history"
                app:layout_constraintStart_toEndOf="@id/history_topping"/>

            <TextView
                android:id="@+id/history_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/history_number"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/history_topping"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/history_number_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="02"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/history_topping"
                app:layout_constraintStart_toEndOf="@id/history_number"/>

            <TextView
                android:id="@+id/history_price_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="35.000đ"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_history_item"/>
            
            <TextView
                android:id="@+id/btn_cancel_order"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/history_status"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/btn_cancel_history"
                app:layout_constraintTop_toBottomOf="@+id/history_price_food"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp">
            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/history_take_care"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_take_care"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/card_view_history"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_take_care_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_take_care">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/notification_name_shop"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/history_name_shop"
                android:textSize="22sp"
                android:textColor="#BE1515"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintStart_toEndOf="@+id/notificationImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.486" />

                <ImageView
                    android:id="@+id/notificationImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/logo_shop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"></ImageView>
            <TextView
                android:id="@+id/history_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/history_phone_number"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/notification_name_shop"
                app:layout_constraintStart_toEndOf="@+id/notificationImg"/>

            <TextView
                android:id="@+id/history_address"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/history_address"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/history_phone_number"
                app:layout_constraintStart_toEndOf="@+id/notificationImg"
                android:inputType="textMultiLine"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rev_item_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/buy_item_again"
        app:layout_constraintTop_toBottomOf="@+id/card_view_take_care_history">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>